programa
{
	funcao inicio()
	{
	
		real valorVenal
    inteiro tipoAutomovel
    const real ALIQUOTA_3 = 0.03
    const real ALIQUOTA_2 = 0.02


    escreva("Digite abaixo o código do seu automóvel e o valor venal do mesmo, para calcularmos o valor IPVA.")

    escreva("Digite o código do seu automóvel. \nCarro particular e passeio - 1 \nCaminhonetes e Utilitários - 2 \nMotocicletas e Quadricículos - 3\n")
		leia(tipoAutomovel)

    escreva("Digite o valor venal do seu veículo:")
    leia(valorVenal)

    se (tipoAutomovel == 1){
			escreva("\nO valor do seu IPVA é: R$", (valorVenal*ALIQUOTA_3))
		}senao se (tipoAutomovel == 2){
			escreva("\nO valor do seu IPVA é: R$", (valorVenal*ALIQUOTA_2))	
    }senao se (tipoAutomovel == 3){
			escreva("\nO valor do seu IPVA é: R$", (valorVenal*ALIQUOTA_2))	
		}senao {
			escreva("\nVocê digitou um valor errado.")
		}
  }		
}
