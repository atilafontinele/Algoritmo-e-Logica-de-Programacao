programa
{
	
	funcao inicio()
	{
		inteiro n1
		inteiro n2
		inteiro soma

		escreva("++++++Verificar interio par ou ímpar++++++")
		escreva("\nEntre com o número inteiro: ")
		leia(n1)
		
		se (n1 % 2 == 0){
			escreva("\nO número ", n1 , " é par!")
		}senao{
			escreva("\nO número ", n1 , " é impar!")
		}
	}
}
